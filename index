      function initialize_generate() {
        var sweetspot = Math.floor((Math.random() * salesforcetidbit.length));
        for (var i = 0; i <= salesforcetidbit.length; i++) {
      
          if (i === sweetspot) {
            var itemHtml = generate_html(salesforcetidbit[i]);
            $(".item").empty().append(itemHtml);
            //console.log("test");
          }
        }
      }
      
      function generate_html(itemObj) {
      
        var itemHtml = "<i> " + itemObj["item"];
        return itemHtml
      }
      
